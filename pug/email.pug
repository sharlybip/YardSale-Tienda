doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Frontend
        link(rel="stylesheet", href="../css/email-style.css")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;500;700&display=swap" rel="stylesheet")
    body
        section.login
            div.form-container
                img(src="../images/logos/logo_yard_sale.svg", alt="logo",class="logo")
                h1.title Email has been sent! 
                p.subtitle Please check your inbox for instructions on how reset your pasword
                .email-image 
                    img(src="../images/icons/email.svg", alt="email")
                button.primary-button(class="login-button") Login
                p.resend
                    span Didn't receive the email?
                    a(href="/") Resend 